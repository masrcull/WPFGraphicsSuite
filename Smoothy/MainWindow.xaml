<Window x:Class="Smoothy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smoothy"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Content="Clear" Width="40" Height="40" Click="ClearPolygon" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button Content="Subdivide" Width="60" Height="40" Click="Subdivide" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,0,0,0" />
        <Button Content="Dual" Width="40" Height="40" Click="DualPolygon" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,45,0,0" />
        <Canvas x:Name="myCanvas" Width="700" Height="Auto" HorizontalAlignment="Right" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" Background="Beige">
           
        </Canvas>
        
    </Grid>
</Window>
